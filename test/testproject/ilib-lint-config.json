{
    "name": "testproject",
    "plugins": [
        "ilib-lint-plugin-test"
    ],
    "formatters": [
        {
            "name": "null",
            "description": "A no-output formatter",
            "template": "",
            "highlightStart": "",
            "highlightEnd": ""
        }
    ],
    "locales": [
        "en-US",
        "de-DE",
        "ja-JP",
        "ko-KR"
    ],
    "paths": {
        "**/*.xyz": {
            "template": "[dir]/test_[localeUnder].xyz",
            "rules": {
                "resource-icu-plurals": true,
                "resource-quote-style": false,
                "resource-named-params": true,
                "resource-url-match": false,
                "resource-test": true
            }
        },
        "**/*.xliff": {
            "rules": {
                "resource-icu-plurals": true,
                "resource-quote-style": "localeOnly",
                "resource-url-match": true,
                "resource-named-params": true
            }
        }
    }
}